<Window x:Class="Pr11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Список студентов:" FontSize="16" FontWeight="Bold"/>
            <ListBox x:Name="StudentListBox" Height="100" Margin="0,10,0,20"/>
            <Label Content="Разделитель:" Margin="0,0,0,5"/>
            <TextBox x:Name="SeparatorTextBox" Text=";" Width="50" HorizontalAlignment="Left" Margin="5,0,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,20">
                <Button Content="Вывести с запятой" Click="CommaButton_Click" Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Вывести с разделителем" Click="CustomButton_Click" Padding="10,5"/>
            </StackPanel>
            <Label Content="Результат:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="ResultTextBlock" Padding="10" Height="60" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
